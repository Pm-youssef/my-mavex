# Database
DATABASE_URL="postgresql://username:password@host:port/database"
# Optional: Prisma direct connection URL (recommended on Vercel for pooled/direct connections)
DIRECT_URL="postgresql://username:password@host:port/database"

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"

# Paymob
PAYMOB_API_KEY="your-paymob-api-key"
PAYMOB_INTEGRATION_ID="your-paymob-integration-id"
PAYMOB_IFRAME_ID="your-paymob-iframe-id"

# Admin
ADMIN_PASSWORD="admin123"

# JWT Secrets
ADMIN_JWT_SECRET="your-admin-jwt-secret-key"
USER_JWT_SECRET="your-user-jwt-secret-key"

# Site URLs (used in metadata, sitemap, and client)
# Example: https://your-project.vercel.app (no trailing slash)
SITE_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_SITE_URL="https://your-domain.vercel.app"

# Public analytics (optional)
# GA4: G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=""
# Umami: website id
NEXT_PUBLIC_UMAMI_WEBSITE_ID=""
# Optional custom script URL (default is analytics.umami.is when provided via layout)
NEXT_PUBLIC_UMAMI_SCRIPT_URL=""

# Cloudflare Turnstile (optional)
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"

# SMTP Email (optional, for contact notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="username"
SMTP_PASS="password"
SMTP_FROM="MAVEX Support <support@example.com>"
# Where to receive the contact notifications (fallbacks to SMTP_FROM)
ADMIN_EMAIL="owner@example.com"

# OAuth (optional)
# Google
GOOGLE_CLIENT_ID="your-google-oauth-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Facebook
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"